@page
@model EagleFlight.Pages.Admin.Planes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Plane</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plane.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plane.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plane.ImageFile)
        </dt>
        @if (Model.Plane.ImageFile != null)
        {
        <dd class="col-sm-5">
          <img src="@Model.Plane.ImageFile" height="200" width="200">
        </dd>
        }
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plane.MaxPassenger)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plane.MaxPassenger)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Plane.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
