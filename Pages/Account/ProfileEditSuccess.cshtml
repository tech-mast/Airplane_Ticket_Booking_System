@page
@model EagleFlight.Pages.ProfileEditSuccessModel
@{
    ViewData["Title"]="Profile Update Success";
}

<h1>Your account is updated</h1>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control border-d-1" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Input.IDName"></label>
            <input asp-for="Input.IDName" class="form-control border-d-1" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Input.IDNum"></label>
            <input asp-for="Input.IDNum" class="form-control border-d-1" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control border-d-1" readonly/>
        </div>
        <div class="form-group">
            <img src="@Model.Input.ImageFile" alt="Picture" style="width:200px">
        </div>
    </div>
</div>
